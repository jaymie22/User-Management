<div class="container-fluid">
	<h1>Edit User</h1>

	<% if flash[:error] %>
		<% flash[:error].each do |message| %>
			<p class="error"><%= message %></p>
		<% end %>
	<% elsif flash[:success] %>
		<p class="success"><%= flash[:success] %></p>
	<% end %>

	<form action="/users/<%= @users.id %>" method="post" class="well">

		<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
		<input type="hidden" name="_method" value="patch">

		<div class="form-group">
			<label for="first_name">First Name</label>
			<input type="text" name="user[first_name]" value="<%= @users.first_name %>" placeholder="Enter first name" class="form-control">
		</div class="form-group">

		<div class="form-group">
			<label for="last_name">Last Name</label>
			<input type="text" name="user[last_name]" value="<%= @users.last_name %>" placeholder="Enter last name" class="form-control">
		</div>

		<div class="form-group">
			<label for="email">Email</label>
			<input type="text" name="user[email]" value="<%= @users.email %>" placeholder="Enter email" class="form-control">
		</div>

		<div class="form-group">
			<label for="password">Password</label>
			<input type="password" name="user[password]" value="<%= @users.password %>" placeholder="Enter password" class="form-control">
		</div>

		<input type="submit" value="Update" class="btn btn-danger">
	</form>

	<a href="/users/<%= @users.id %>">Show</a>
	<a href="/">Go Back</a>

</div>